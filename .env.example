# Example environment variables for local dev and Azure App Settings
# Cosmos DB (use connection string from Azure)
COSMOS_CONNECTION_STRING="<your-cosmos-connection-string>"
COSMOS_DATABASE=evoting_db
COSMOS_CONTAINER_ELECTIONS=elections
COSMOS_CONTAINER_VOTES=votes
# Comma-separated admin emails (users with these emails can create elections)
ADMIN_EMAILS=admin@university.edu
# Optionally store static web app environment
STATIC_WEB_APP_NAME=
# For local dev Azure Functions
AzureWebJobsStorage=UseDevelopmentStorage=true
FUNCTIONS_WORKER_RUNTIME=node

# Optional: candidate image container in Blob Storage
BLOB_STORAGE_CONNECTION_STRING=
BLOB_CONTAINER=candidate-images
